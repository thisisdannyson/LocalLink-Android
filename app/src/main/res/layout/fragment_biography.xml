<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".CreatingAccount.Biography">

    <TextView
        android:id="@+id/bio_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textAlignment="center"
        android:textSize="40sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.058" />


    <TextView
        android:id="@+id/bio_subtitle"
        android:layout_width="386dp"
        android:layout_height="42dp"
        android:text="Enter some info about yourself!"
        android:textAlignment="center"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/bio_title"
        app:layout_constraintHorizontal_bias="0.48"
        app:layout_constraintStart_toStartOf="@+id/bio_title"
        app:layout_constraintTop_toBottomOf="@+id/bio_title"
        app:layout_constraintVertical_bias="0.021" />

    <EditText
        android:id="@+id/bio_info_text_pronouns"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/edit_text_border"
        android:ems="12"
        android:gravity="top"
        android:hint="enter pronouns"
        android:inputType="text|textMultiLine"
        android:paddingStart="10dp"
        android:paddingTop="10dp"
        android:selectAllOnFocus="false"
        android:singleLine="false"
        android:text=""
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bio_subtitle" />

    <EditText
        android:id="@+id/bio_info_text_major"
        android:layout_width="wrap_content"
        android:layout_height="75dp"
        android:layout_marginTop="88dp"
        android:background="@drawable/edit_text_border"
        android:ems="12"
        android:gravity="top"
        android:hint="enter major"
        android:inputType="text|textMultiLine"
        android:paddingStart="10dp"
        android:paddingTop="10dp"
        android:selectAllOnFocus="false"
        android:singleLine="false"
        android:text=""
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bio_subtitle" />

    <EditText
        android:id="@+id/bio_info_text_edit_classes"
        android:layout_width="wrap_content"
        android:layout_height="75dp"
        android:layout_marginTop="180dp"
        android:background="@drawable/edit_text_border"
        android:ems="12"
        android:gravity="top"
        android:hint="enter classes"
        android:inputType="text|textMultiLine"
        android:paddingStart="10dp"
        android:paddingTop="10dp"
        android:selectAllOnFocus="false"
        android:singleLine="false"
        android:text=""
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bio_subtitle" />


    <EditText
        android:id="@+id/bio_info_text_edit_interests"
        android:layout_width="wrap_content"
        android:layout_height="75dp"
        android:layout_marginTop="284dp"
        android:background="@drawable/edit_text_border"
        android:ems="12"
        android:gravity="top"
        android:hint="enter interests"
        android:inputType="text|textMultiLine"
        android:paddingStart="10dp"
        android:paddingTop="10dp"
        android:selectAllOnFocus="false"
        android:singleLine="false"
        android:text=""
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bio_subtitle" />

    <EditText
        android:id="@+id/bio_info_text_edit_bio"
        android:layout_width="wrap_content"
        android:layout_height="90dp"
        android:layout_marginTop="380dp"
        android:background="@drawable/edit_text_border"
        android:ems="12"
        android:gravity="top"
        android:hint="enter bio"
        android:inputType="text|textMultiLine"
        android:paddingStart="10dp"
        android:paddingTop="10dp"
        android:selectAllOnFocus="false"
        android:singleLine="false"
        android:text=""
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bio_subtitle" />

    <Button
        android:id="@+id/bio_back_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.244"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bio_info_text_edit_bio"
        app:layout_constraintVertical_bias="0.9" />

    <Button
        android:id="@+id/bio_next_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Next"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.786"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bio_info_text_edit_bio"
        app:layout_constraintVertical_bias="0.899"
        tools:visibility="visible" />

</androidx.constraintlayout.widget.ConstraintLayout>