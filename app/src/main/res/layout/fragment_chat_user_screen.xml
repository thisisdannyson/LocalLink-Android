<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ChatUserScreen">

    <ImageView
        android:id="@+id/chat_user_back_icon"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/chat_user_profile_icon"
        app:layout_constraintBottom_toBottomOf="@id/chat_user_profile_icon"
        android:src="@drawable/ic_back_icon"/>

    <ImageView
        android:id="@+id/chat_user_profile_icon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="50dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/default_image"/>
    <TextView
        android:id="@+id/chat_user_name"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        tools:text="Danny Son"
        android:textSize="16dp"
        android:textColor="@color/black"
        app:layout_constraintStart_toEndOf="@id/chat_user_profile_icon"
        app:layout_constraintTop_toTopOf="@id/chat_user_profile_icon"
        app:layout_constraintBottom_toBottomOf="@id/chat_user_profile_icon"/>

    <View
        android:id="@+id/chat_user_divider_line"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="12dp"
        android:background="@color/black"
        app:layout_constraintTop_toBottomOf="@id/chat_user_profile_icon"
        />

    <TextView
        android:id="@+id/chat_user_pre_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#1F8AFF"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:maxWidth="250dp"
        android:paddingHorizontal="12dp"
        android:gravity="center_vertical"
        android:text="Hello, i'm looking to study for HCI tonight, wanna join?"
        android:layout_marginTop="18dp"
        android:layout_marginEnd="18dp"
        app:layout_constraintTop_toBottomOf="@id/chat_user_divider_line"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/chat_user_pre_text_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#B3B3B3"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:maxWidth="250dp"
        android:paddingHorizontal="12dp"
        android:layout_marginStart="18dp"
        android:gravity="center_vertical"
        android:text="Hey! I would love to join, where do you want to meet up?"
        android:layout_marginTop="18dp"
        android:layout_marginEnd="18dp"
        app:layout_constraintTop_toBottomOf="@id/chat_user_pre_text"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/chat_user_pre_text_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#1F8AFF"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:maxWidth="250dp"
        android:paddingHorizontal="12dp"
        android:gravity="center_vertical"
        android:visibility="invisible"
        tools:text="Hello, i'm looking to study for HCI tonight, wanna join?"
        android:layout_marginTop="18dp"
        android:layout_marginEnd="18dp"
        app:layout_constraintTop_toBottomOf="@id/chat_user_pre_text_2"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/chat_user_pre_text_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#1F8AFF"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:maxWidth="250dp"
        android:visibility="invisible"
        android:paddingHorizontal="12dp"
        android:gravity="center_vertical"
        tools:text="Hello, i'm looking to study for HCI tonight, wanna join?"
        android:layout_marginTop="18dp"
        android:layout_marginEnd="18dp"
        app:layout_constraintTop_toBottomOf="@id/chat_user_pre_text_3"
        app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
        android:id="@+id/chat_user_pre_text_5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#1F8AFF"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:maxWidth="250dp"
        android:visibility="invisible"
        android:paddingHorizontal="12dp"
        android:gravity="center_vertical"
        tools:text="Hello, i'm looking to study for HCI tonight, wanna join?"
        android:layout_marginTop="18dp"
        android:layout_marginEnd="18dp"
        app:layout_constraintTop_toBottomOf="@id/chat_user_pre_text_4"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/chat_user_pre_text_6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#1F8AFF"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:maxWidth="250dp"
        android:visibility="invisible"
        android:paddingHorizontal="12dp"
        android:gravity="center_vertical"
        tools:text="Hello, i'm looking to study for HCI tonight, wanna join?"
        android:layout_marginTop="18dp"
        android:layout_marginEnd="18dp"
        app:layout_constraintTop_toBottomOf="@id/chat_user_pre_text_5"
        app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
        android:id="@+id/chat_user_pre_text_7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#1F8AFF"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:visibility="invisible"
        android:maxWidth="250dp"
        android:paddingHorizontal="12dp"
        android:gravity="center_vertical"
        tools:text="Hello, i'm looking to study for HCI tonight, wanna join?"
        android:layout_marginTop="18dp"
        android:layout_marginEnd="18dp"
        app:layout_constraintTop_toBottomOf="@id/chat_user_pre_text_6"
        app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
        android:id="@+id/chat_user_pre_text_8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#1F8AFF"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:maxWidth="250dp"
        android:paddingHorizontal="12dp"
        android:gravity="center_vertical"
        android:visibility="invisible"
        tools:text="Hello, i'm looking to study for HCI tonight, wanna join?"
        android:layout_marginTop="18dp"
        android:layout_marginEnd="18dp"
        app:layout_constraintTop_toBottomOf="@id/chat_user_pre_text_7"
        app:layout_constraintEnd_toEndOf="parent"/>




    <EditText
        android:id="@+id/chat_user_edit_text"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:ems="10"
        android:inputType="text"
        android:text=""
        android:gravity="center_vertical"
        android:paddingHorizontal="12dp"
        android:hint="type to send a message"
        android:background="@drawable/edit_text_border"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="70dp"/>

    <ImageView
        android:id="@+id/chat_user_send_button"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/ic_send_icon"
        app:layout_constraintStart_toEndOf="@id/chat_user_edit_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/chat_user_edit_text"
        app:layout_constraintBottom_toBottomOf="@id/chat_user_edit_text"/>

</androidx.constraintlayout.widget.ConstraintLayout>