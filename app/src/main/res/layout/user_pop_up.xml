<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="250dp"
    android:layout_height="match_parent"
    android:background="#3CF4CD93"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <ImageView
        android:id="@+id/user_popup_cancel_icon"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="12dp"
        android:src="@drawable/round_cancel_24"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@color/black" />
    <TextView
        android:id="@+id/user_popup_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/user_popup_cancel_icon"
        android:layout_marginTop="12dp"
        android:text="Name"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/black"/>
    <ImageView
        android:id="@+id/user_popup_image"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:textAlignment="center"
        android:layout_marginTop="12dp"
        android:src="@drawable/default_image"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/user_popup_name"/>

    <TextView
        android:id="@+id/user_popup_location_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/user_popup_image"
        android:layout_marginStart="30dp"
        android:layout_marginTop="12dp"
        android:text="Location: "
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/user_popup_location_body"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/user_popup_location_title"
        app:layout_constraintTop_toBottomOf="@id/user_popup_image"
        android:layout_marginStart="4dp"
        android:layout_marginTop="12dp"
        tools:text="Hayden Hall"
        android:textSize="16sp"
        android:textColor="#5C5C5C"/>


    <TextView
        android:id="@+id/user_popup_pronoun_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/user_popup_location_body"
        android:layout_marginStart="30dp"
        android:layout_marginTop="12dp"
        android:text="Pronouns: "
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/user_popup_pronoun_body"
        android:layout_width="150dp"
        android:layout_height="50dp"
        app:layout_constraintStart_toEndOf="@id/user_popup_pronoun_title"
        app:layout_constraintTop_toBottomOf="@id/user_popup_location_body"
        android:layout_marginStart="4dp"
        android:layout_marginTop="12dp"
        tools:text="He/Him"
        android:textSize="16sp"
        android:textColor="#5C5C5C"/>

    <TextView
        android:id="@+id/user_popup_major_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/user_popup_pronoun_title"
        android:layout_marginStart="30dp"
        android:layout_marginTop="12dp"
        android:text="Major:"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/user_popup_major_body"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/user_popup_major_title"
        app:layout_constraintTop_toBottomOf="@id/user_popup_pronoun_title"
        android:layout_marginStart="4dp"
        android:layout_marginTop="12dp"
        android:text="Computer Science and Game Dev"
        android:textSize="16sp"
        android:textColor="#5C5C5C"/>

    <TextView
        android:id="@+id/user_popup_classes_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/user_popup_major_body"
        android:layout_marginStart="30dp"
        android:layout_marginTop="12dp"
        android:text="Classes:"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/user_popup_classes_body"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/user_popup_classes_title"
        app:layout_constraintTop_toBottomOf="@id/user_popup_major_body"
        android:layout_marginStart="4dp"
        android:layout_marginTop="12dp"
        tools:text="HCI, Computer Graphics, turkey jerky jaiosdjoaidjiao daa oisdjao djaio d"
        android:textSize="16sp"
        android:textColor="#5C5C5C"/>


    <TextView
        android:id="@+id/user_popup_interests_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/user_popup_classes_body"
        android:layout_marginStart="30dp"
        android:layout_marginTop="12dp"
        android:text="Interests:"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/user_popup_interests_body"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/user_popup_interests_title"
        app:layout_constraintTop_toBottomOf="@id/user_popup_classes_body"
        android:layout_marginStart="4dp"
        android:layout_marginTop="12dp"
        tools:text="Hiking, Cooking, Climbing"
        android:textSize="16sp"
        android:textColor="#5C5C5C"/>

    <TextView
        android:id="@+id/user_popup_bio_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/user_popup_interests_body"
        android:layout_marginStart="30dp"
        android:layout_marginTop="12dp"
        android:text="Bio:"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/user_popup_bio_body"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/user_popup_bio_title"
        app:layout_constraintTop_toBottomOf="@id/user_popup_interests_body"
        android:layout_marginStart="4dp"
        android:layout_marginTop="12dp"
        tools:text="Looking for some friends to study at in Snell Library!"
        android:textSize="16sp"
        android:textColor="#5C5C5C"/>

    <Button
        android:id="@+id/user_popup_chat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Chat"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="18dp"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/user_popup_bio_body"
        app:layout_constraintVertical_bias="0.204" />


</androidx.constraintlayout.widget.ConstraintLayout>