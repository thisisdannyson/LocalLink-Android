<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".SearchResults">

    <TextView
        android:id="@+id/search_results_no_students_found"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:textAlignment="center"
        android:paddingHorizontal="20dp"
        android:textColor="@color/black"
        android:text="No students found, Try adding more buildings to your search!"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:visibility="invisible"
        />
    <TextView
        android:id="@+id/search_results_studentsFoundNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:textAlignment="center"
        android:layout_marginTop="12dp"
        android:textColor="@color/black"
        android:text="X students found!"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:visibility="visible"
        />
    <TextView
        android:id="@+id/search_results_studentsFoundInstructions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:textAlignment="center"
        android:paddingHorizontal="20dp"
        android:textColor="#5C5C5C"
        android:layout_marginTop="12dp"
        android:text="Click on Students to view more information on them"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/search_results_studentsFoundNumber"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:visibility="visible"
        />
    <View
        android:id="@+id/search_results_divider_line"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="12dp"
        android:background="@color/black"
        app:layout_constraintTop_toBottomOf="@id/search_results_studentsFoundInstructions"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/search_results_recycler"
        android:padding="4dp"
        android:clipToPadding="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/search_results_divider_line"
        app:layout_constraintStart_toStartOf="parent"/>

    <Button
        android:id="@+id/search_results_back_to_map"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="12dp"
        android:text="Back to Map"
        />





</androidx.constraintlayout.widget.ConstraintLayout>