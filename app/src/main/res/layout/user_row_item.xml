<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="175dp"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#92F4CD93"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/user_name"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginLeft="-5dp"
        android:textColor="@color/black"
        tools:text="Christina"
        android:textAlignment="center"
        app:layout_constraintBottom_toTopOf="@id/user_image"
        app:layout_constraintStart_toStartOf="@id/user_image"/>

    <ImageView
        android:id="@+id/user_image"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:src="@drawable/default_image"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="12dp"/>



    <TextView
        android:id="@+id/user_major_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Major:"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/user_image"
        app:layout_constraintTop_toTopOf="@id/user_image"
        />
    <TextView
        android:id="@+id/user_major_body"
        android:layout_width="265dp"
        android:layout_height="wrap_content"
        tools:text="Computer Science + Game Development"
        android:layout_marginStart="6dp"
        app:layout_constraintStart_toEndOf="@id/user_major_title"
        app:layout_constraintTop_toTopOf="@id/user_major_title"
        android:textColor="#5C5C5C"/>
    <TextView
        android:id="@+id/user_bio_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Bio:"
        android:textStyle="bold"
        android:textColor="@color/black"
        app:layout_constraintStart_toEndOf="@id/user_image"
        app:layout_constraintTop_toBottomOf="@id/user_major_title"
        />

    <TextView
        android:id="@+id/user_bio_body"
        android:layout_width="275dp"
        android:layout_height="wrap_content"
        tools:text="Looking for friends on campus to study wit"
        android:layout_marginStart="6dp"
        app:layout_constraintStart_toEndOf="@id/user_bio_title"
        app:layout_constraintTop_toTopOf="@id/user_bio_title"
        android:textColor="#5C5C5C"/>

    <Button
        android:id="@+id/user_view_more_button"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginStart="4dp"
        android:text="View More"
        android:textSize="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/user_image" />
    <Button
        android:id="@+id/user_chat_button"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginEnd="12dp"
        android:text="Chat"
        android:textSize="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/user_image" />


</androidx.constraintlayout.widget.ConstraintLayout>